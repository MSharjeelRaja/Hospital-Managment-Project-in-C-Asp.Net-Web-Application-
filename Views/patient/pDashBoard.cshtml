@model Hospitalproject.Models.patient

@{
    ViewBag.Title = "DashBoard";
    Layout = null; // Remove the layout reference

}

<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            color: #fff;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background: url('../stethoscope-copy-space.jpg') center/cover no-repeat fixed;
            background-color: #333;
        }

        h2 {
            font-size: 40px;
        }

        a {
            text-decoration: none;
            color: black;
            padding: 20px;
        }

        .navbar {
            background-color: #333;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            padding: 5px;
            width: 100%;
            text-align: center;
            position: fixed;
            top: 0;
            left: 0;
            overflow: hidden;
            z-index: 1000;
        }

        logout {
            color: wheat;
        }

        .navbar h1 {
            margin: 0;
            font-size: 70px;
            font-weight: bold;
            font-family: Cambria;
            color: #fff;
            display: inline-block;
        }


        .navbar img {
            height: 80px;
            width: 120px;
            margin-right: 50px;
        }
    </style>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet"
          integrity="sha512-KyZXEAg3QhqLMpG8r+Knujsl5+z0I5t9z/TNME5ZEsx4BCQkTXtk+np1Fzr1/W+MtkG6R8O3z8UJmMvktL8qGg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>


<body>
    <body>
        <div class="navbar">
            <img src="../lo.png" alt="Logo">
            <h1>Fauji Foundation Hospital</h1>
        </div>
        <h2>Welcome @Session["pname"]</h2><br />




        <br />
        <div style="display:flex; ">

            @*QueryString form of state management done on the client Side*@
            @*@Html.ActionLink("Album", "AddAlbum", "Album");*@
            @*@Html.ActionLink("Song", "AddAlbum", "Album");*@
            @*Sid is in the Session no need to write*@
            <a href="/Album/AddAlbum">
                <h2 style="float:left">Add Patient</h2>
            </a>
            <a href="/Album/ShowAlbums?sid=@Session["pid"]">

                <h2 style="float:left;">Show Appointments</h2>
            </a>
        </div>
        @Html.ActionLink("Logout", "Logout", null, new { @style = "color: white;font-size:40px; background-color:black;padding:4px;border-radius:20px; font-weight: bold;" })

    </body>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
