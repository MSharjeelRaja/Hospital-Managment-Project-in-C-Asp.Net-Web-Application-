@model List<Hospitalproject.Models.doc>
<style>
    body {
        color: #fff;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background: url('../../header2-1-1536x435.jpg') center/cover no-repeat fixed;
        font-family: 'Bebas Neue', sans-serif;
    }

    .navbar {
        background-color: #ffffff;
        box-shadow: 0 0 20px rgba(17, 7, 7, 0.5);
        padding: 0px;
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        overflow: hidden;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .navbar img {
            height: 70px;
            width: 680px;
            margin-left: -110px;
        }

        .navbar ul {
            list-style: none;
            display: flex;
        }

            .navbar ul li {
                margin: 0 30px;
                color: black;
                font-size: 20px;
            }

                .navbar ul li:hover {
                    color: red;
                }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        color: white;
    }

    th {
        background-color: darkred;
        color: white;
    }

    .tb {
        padding: 20px;
        background-color: rgba(21, 21, 21, 0.7);
        border-radius: 10px;
        box-shadow: 0 0 20px rgb(214, 145, 145);
    }

        .tb h2 {
            text-align: center;
            font-size: 35px;
            font-weight: bold;
            margin-top: 16px;
            margin-bottom: 15px;
        }

    input {
        margin: 10px;
    }

    label {
        display: inline-block;
        width: 200px; /* Adjust as needed */
        text-align: left;
        margin-right: 10px;
    }

    input[type="submit"] {
        background-color: red;
        color: white;
        border: 2px solid darkred;
        padding: 15px;
        border-radius: 8px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: darkred;
        }
</style>

<div class="navbar">
    <img src="~/logo.png">
    <ul>
        <li>Donations</li>
        <li>Services & Departments</li>
        <li>Join Us</li>
        <li>Doctors</li>
    </ul>
</div>
<div class="tb">
    <h2>Create Appointment</h2>

    @using (Html.BeginForm("CreateAppointmentPost", "Patient"))
    {
        <label for="doctorID">Select Doctor:</label>
        <select name="doctorID">
            @foreach (var doctor in Model)
            {
                <option value="@doctor.DoctorID">@doctor.DoctorName</option>
            }
        </select>

        <br />

        <label for="appointmentDateTime">Appointment DateTime:</label>
        <input type="datetime-local" name="appointmentDateTime" required />

        <br />

        <label for="patientID">Patient ID:</label>
        <input type="text" name="patientID" required />

        <br />

        <input type="submit" value="Create Appointment" />
    }

